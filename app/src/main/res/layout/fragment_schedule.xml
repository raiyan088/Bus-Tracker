<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/black"
        android:textSize="42sp"
        android:text="Schedule"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:layout_height="52dp"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded,RtlSymmetry">

            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/rounded_blue_bg"
                tools:ignore="NestedWeights">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_bus"
                    android:padding="9dp"
                    android:background="@drawable/rounded_blue_light_bg"
                    app:tint="@color/white" />

                <TextView
                    android:text="Brahmaputra"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:padding="6dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:background="#1271CD"
                android:layout_width="32dp"
                android:layout_height="1dp"/>

            <ImageView
                android:src="@drawable/ic_arrow_right"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:translationX="-2dp"
                app:tint="#1271CD"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/horizontalList"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="12dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/rounded_blue_low_bg"
                        tools:ignore="NestedWeights,RtlSymmetry">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="top"
                                android:padding="2dp"
                                android:src="@drawable/ic_arrow_up"
                                app:tint="@color/white" />

                            <TextView
                                android:text="7:00 AM"
                                android:textSize="12sp"
                                android:singleLine="true"
                                android:padding="2dp"
                                android:layout_gravity="bottom"
                                android:textColor="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:background="#68B5FD"
                            android:layout_width="match_parent"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_height="1dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:text="7:00 AM"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:singleLine="true"
                                android:padding="2dp"
                                android:layout_marginStart="4dp"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"
                                android:textColor="@color/white"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:rotation="180"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="top"
                                android:padding="2dp"
                                android:src="@drawable/ic_arrow_up"
                                app:tint="@color/white" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="12dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/rounded_blue_low_bg"
                        tools:ignore="NestedWeights,RtlSymmetry">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="top"
                                android:padding="2dp"
                                android:src="@drawable/ic_arrow_up"
                                app:tint="@color/white" />

                            <TextView
                                android:text="7:00 AM"
                                android:textSize="12sp"
                                android:singleLine="true"
                                android:padding="2dp"
                                android:layout_gravity="bottom"
                                android:textColor="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:background="#68B5FD"
                            android:layout_width="match_parent"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_height="1dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:text="7:00 AM"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:singleLine="true"
                                android:padding="2dp"
                                android:layout_marginStart="4dp"
                                android:layout_weight="1"
                                android:layout_gravity="bottom"
                                android:textColor="@color/white"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:rotation="180"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="top"
                                android:padding="2dp"
                                android:src="@drawable/ic_arrow_up"
                                app:tint="@color/white" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>

    </LinearLayout>

    <com.rr.bubtbustracker.view.RouteMapView
        android:id="@+id/route_map_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>