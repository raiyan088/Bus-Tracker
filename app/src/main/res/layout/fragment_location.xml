<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/distView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="36dp"
        android:gravity="center"
        android:background="@drawable/bg_rounded_shadow"
        android:elevation="12dp"
        android:translationZ="12dp"
        android:visibility="gone"
        android:padding="0dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:textSize="14sp"
                android:textColor="#DEDEDE"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/fromName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dhaka"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:singleLine="true"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_swap"
            android:rotation="90"
            android:alpha="0.8"
            android:padding="5dp"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To"
                android:textSize="14sp"
                android:textColor="#DEDEDE"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/toName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dhaka"
                android:textSize="18sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/bus_route"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="86dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/route_button_background"
        android:src="@drawable/ic_bus_route"
        android:contentDescription="My Location"
        android:padding="10dp"
        android:elevation="8dp"
        android:scaleType="centerInside"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

    <ProgressBar
        android:id="@+id/bus_route_loading"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="86dp"
        android:layout_marginEnd="24dp"
        android:indeterminate="true"
        android:visibility="gone"
        android:elevation="8dp" />

</FrameLayout>
